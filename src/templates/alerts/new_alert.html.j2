{% extends "base.html.j2" %}
{% block content %}
    <div class="new-alerts-page-header">
        <h1>Create Alert</h1>
    </div>
    <div class="form-size">
        <form class="" action="" method="post">
            <div class="form-group">
                <label for="name">Alert/Item Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="http://...">
            </div>
            <div class="form-group">
                <label for="price_limit">Alert limit</label>
                <input type="text" class="form-control" id="price_limit" name="price_limit" placeholder="100.00" aria-describedby="priceLimitBlock">
                <p id="priceLimitBlock" class="form-text text-muted">We'll send you an email when the price reaches or goes under this.</p>
            </div>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>
{% endblock %}
